{
  "name": "bf6portal-tool",
  "version": "1.2.7",
  "description": "Battlefield 6 Portal Logic Editor - Gemini Edition",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "npm run dist",
    "test": "npm test --prefix web_ui"
  },
  "author": "Neuro",
  "license": "ISC",
  "build": {
    "appId": "com.neuro.bf6portal",
    "productName": "BF6Portal Tool",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "web_ui/assets/img/app_logo.png"
    },
    "files": [
      "electron-main.js",
      "package.json",
      "web_ui/dist/**/*",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/*.map",
      "!**/*.md",
      "!**/*.ts",
      "!**/tsconfig.json",
      "!**/webpack.config.js",
      "!web_ui/node_modules",
      "!web_ui/src",
      "!web_ui/public",
      "!=Resources="
    ],
    "asar": true
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  }
}
